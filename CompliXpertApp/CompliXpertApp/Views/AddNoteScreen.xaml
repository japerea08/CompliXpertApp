<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompliXpertApp.Views.AddNoteScreen">
    <ContentPage.Content>
        <StackLayout Margin="15,0">
            <Label Text="Add Note"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Margin="0, 5"/>
            <Label Text="Subject"
                   FontSize="Medium"
                   Margin="0,5"/>
            <Entry
                            FontSize="Medium"
                            Text="{Binding Subject}" />
            <Label Text="Description"
                   FontSize="Medium"
                   Margin="0,5"/>
            <Entry
                        
                            FontSize="Medium"
                            Text="{Binding Description}" />
            <Button Text="Save" 
                            BackgroundColor="#428bca" 
                            TextColor="White" 
                            Command="{Binding SaveNoteCommand}"
                    Margin="0,5"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>