<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompliXpertApp.Views.CreateCallReportScreen">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="15">
                <Label Text="Call Report Details"
                   FontAttributes="Bold"
                   FontSize="Medium"
                   Margin="0,0,0,10"/>
                <Label Text="Account"
                   FontAttributes="Bold"
                   FontSize="Small"/>
                <Label Text="{Binding AccountNumber}"/>
                <Picker Title="Select a Reason"
                    SelectedIndex="{Binding SelectedReason}">
                    <Picker.Items>
                        <x:String>Customer Visit</x:String>
                        <x:String>FATCA Questionnaire</x:String>
                        <x:String>Internet Conference</x:String>
                        <x:String>Phone Call</x:String>
                        <x:String>Visit to Customer Site or Office</x:String>
                    </Picker.Items>
                </Picker>
                <StackLayout>
                    <Label Text="Call Date"
                       FontAttributes="Bold"
                       FontSize="Small"/>
                    <DatePicker></DatePicker>
                    <Label Text="Reference"
                       FontAttributes="Bold"
                       FontSize="Small"/>
                    <Entry/>
                </StackLayout>
                <StackLayout IsVisible="{Binding CustomerVisitSelected}">
                    <Label Text="Purpose of Visit or Phone Call"
                       FontAttributes="Bold"
                       FontSize="Small"/>
                    <Entry/>
                    <Label Text="Officer's Observations or Comments"
                       FontAttributes="Bold"
                       FontSize="Small"/>
                    <Entry/>
                    <Label Text="Other Comments"
                       FontAttributes="Bold"
                       FontSize="Small"/>
                    <Entry/>
                    <Label Text="Customer Comments"
                       FontAttributes="Bold"
                       FontSize="Small"/>
                    <Entry/>
                </StackLayout>
                <StackLayout IsVisible="{Binding FatcaSelected}">
                    <Label Text="Nationality"
                       FontAttributes="Bold"
                       FontSize="Small"/>
                    <Entry/>
                    <Label Text="Reason for Alert"
                       FontAttributes="Bold"
                       FontSize="Small"/>
                    <Entry/>
                    <Label Text="Customer Response"
                       FontAttributes="Bold"
                       FontSize="Small"/>
                    <Entry/>
                </StackLayout>
                <StackLayout Orientation="Horizontal"
                             HorizontalOptions="FillAndExpand">
                    <Button Text="Save" BackgroundColor="#428bca" TextColor="White"></Button>
                    <Button Text="Delete" BackgroundColor="#f44242" TextColor="White"></Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>