<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompliXpertApp.Views.CreateCallReportScreen"
             Title="CompliXpert">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="15">
                <Label Text="Call Report Details"
                       FontSize="Large"
                       HorizontalTextAlignment="Center"
                       Margin="0,0,0,10"/>
                <Label Text="Account"
                   TextColor="#305d82"
                   FontSize="Large"/>
                <Label Text="{Binding Account.AccountNumber}"
                       FontSize="Medium"/>
                <Label Text="Customer Name"
                   TextColor="#305d82"
                   FontSize="Large"/>
                <Label Text="{Binding CustomerName}"
                       FontSize="Medium"/>
                <Label Text="Call Reason"
                       FontSize="Large"
                       TextColor="#305d82"/>
                <Picker Title="Select a Reason"
                        SelectedItem="{Binding Type, Mode=TwoWay}"
                        ItemsSource="{Binding Types}"
                        ItemDisplayBinding="{Binding Description}"
                        >
                </Picker>
                <Label Text="Call Date"
                       TextColor="#305d82"
                       FontSize="Large"/>
                <DatePicker Date="{Binding NewCallReport.CallDate}"/>
                <Label Text="Reference"
                       TextColor="#305d82"
                       FontSize="Large"/>
                <Entry Text="{Binding NewCallReport.Reference}"/>
                <StackLayout>
                    <ListView ItemsSource="{Binding QR}"
                              SeparatorVisibility="None"
                              SelectionMode="None"
                              IsVisible="{Binding ReasonSelected}"
                              HasUnevenRows="True"
                              HorizontalScrollBarVisibility="Never"
                              HeightRequest="{Binding Height}">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <StackLayout>
                                        <Label Text="{Binding QuestionHeader}"
                                           FontSize="Large"
                                           TextColor="#305d82"/>
                                        <Entry Text="{Binding Response}"/>
                                    </StackLayout>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackLayout>
                <Button Text="Save" 
                            BackgroundColor="#428bca" 
                            TextColor="White" 
                            Command="{Binding SaveCallReportCommand}"></Button>
                <ActivityIndicator IsRunning="{Binding IsBusy}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>