<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local2="clr-namespace:CompliXpertApp.Behaviors"
             x:Class="CompliXpertApp.Views.AddPersonScreen">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="15,0">
                <Label Text="Add Person"
                   FontSize="Large"
                   FontAttributes="Bold"
                   HorizontalTextAlignment="Center"
                   Margin="0, 5"/>
                <Label Text="First Name"
                   FontSize="Medium"
                   Margin="0,5"/>
                <Entry
                            FontSize="Medium"
                            Text="{Binding FirstName}" />
                <Label Text="Last Name"
                   FontSize="Medium"
                   Margin="0,5"/>
                <Entry
                        
                            FontSize="Medium"
                            Text="{Binding LastName}" />
                <Label Text="Email"
                   FontSize="Medium"
                   Margin="0,5"/>
                <Entry FontSize="Medium"
                       Text="{Binding PersonEmail}" 
                       Keyboard="Email">
                    <Entry.Behaviors>
                        <local2:EmailValidatorBehavior Command="{Binding EmailValidateMessageCommand}"/>
                    </Entry.Behaviors>
                </Entry>
                <Label Text="{Binding EmailValidationMessage}"
                       TextColor="{Binding EmailValidationColor}">
                    <Label.Triggers>
                        <DataTrigger TargetType="Label"
                                     Binding="{Binding TextEntered}"
                                     Value="false">
                            <Setter Property="IsVisible"
                                    Value="false"/>
                        </DataTrigger>
                        <DataTrigger TargetType="Label"
                                     Binding="{Binding TextEntered}"
                                     Value="true">
                            <Setter Property="IsVisible"
                                    Value="true"/>
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Label Text="Phone Number"
                   FontSize="Medium"
                   Margin="0,5"/>
                <Entry
                        
                            FontSize="Medium"
                            Text="{Binding PhoneNumber}" />
                <Label Text="Position"
                   FontSize="Medium"
                   Margin="0,5"/>
                <Entry
                        
                            FontSize="Medium"
                            Text="{Binding Position}" />
                <Button Text="Save" 
                            BackgroundColor="#428bca" 
                            TextColor="White" 
                            Command="{Binding SavePersonCommand}"
                    Margin="0,5"/>
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>