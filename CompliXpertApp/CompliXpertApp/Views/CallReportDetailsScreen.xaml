<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompliXpertApp.Views.CallReportDetailsScreen">
    <ContentPage.Content>
        <!--this will display if not created on the mobile device-->
        <StackLayout Margin="15"
                         VerticalOptions="FillAndExpand">
            <ListView ItemsSource="{Binding QuestionandResponses}" 
                          VerticalOptions="StartAndExpand"
                              HasUnevenRows="True" 
                              SeparatorVisibility="None"
                              SelectionMode="None"
                              VerticalScrollBarVisibility="Never"
                              HorizontalScrollBarVisibility="Default">
                <ListView.Triggers>
                    <DataTrigger TargetType="ListView"
                                 Binding="{Binding CreatedOnMobile}"
                                 Value="True">
                        <Setter Property="IsVisible" Value="False"/>
                    </DataTrigger>
                    <DataTrigger TargetType="ListView"
                                 Binding="{Binding CreatedOnMobile}"
                                 Value="False">
                        <Setter Property="IsVisible" Value="True"/>
                    </DataTrigger>
                </ListView.Triggers>
                <ListView.Header>
                    <StackLayout>
                        <Label Text="Account"
                                   TextColor="#305d82"
                                   FontSize="Large"/>
                        <Label Text="{Binding Report.AccountNumber}"
                                   FontSize="Large"/>
                        <Label Text="Call Report"
                                   TextColor="#305d82"
                                   FontSize="Large"/>
                        <Label Text="{Binding Report.CallReportId}"
                                   FontSize="Large"/>
                        <Label Text="Call Report Type"
                                   TextColor="#305d82"
                                   FontSize="Large"/>
                        <Label Text="{Binding ReportType}"
                                    FontSize="Large"/>
                        <Label Text="Call Date"
                                       TextColor="#305d82"
                                       FontSize="Large"/>
                        <DatePicker Date="{Binding Report.CallDate}" 
                                            IsEnabled="False" 
                                            FontSize="Large"></DatePicker>
                        <Label Text="Reference"
                                       TextColor="#305d82"
                                       FontSize="Large"/>
                        <Label Text="{Binding Report.Reference, TargetNullValue='Reference Not Given'}"
                                       FontSize="Large"/>
                    </StackLayout>
                </ListView.Header>
                <ListView.Footer>
                    <StackLayout Padding="0,15,0,10">
                        <Button 
                                Text="Close" 
                                BackgroundColor="#428bca" 
                                TextColor="White" 
                                Command="{Binding CloseCallReportCommand}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="True">
                                    <Setter Property="IsVisible" Value="False"></Setter>
                                </DataTrigger>
                                <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="False">
                                    <Setter Property="IsVisible" Value="True"></Setter>
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackLayout>
                </ListView.Footer>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding QuestionHeader}"
                                           FontSize="Large"
                                           TextColor="#305d82"/>
                                <Label Text="{Binding Response}"
                                               FontSize="Large"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <!--Will display if created on mobile device-->
            <ListView ItemsSource="{Binding QuestionandResponses}" 
                              HasUnevenRows="True" 
                              SeparatorVisibility="None"
                              HeightRequest="{Binding Height}"
                              VerticalScrollBarVisibility="Never"
                              SelectionMode="None">
                <ListView.Triggers>
                    <DataTrigger TargetType="ListView"
                                 Binding="{Binding CreatedOnMobile}"
                                 Value="True">
                        <Setter Property="IsVisible" Value="True"/>
                    </DataTrigger>
                    <DataTrigger TargetType="ListView"
                                 Binding="{Binding CreatedOnMobile}"
                                 Value="False">
                        <Setter Property="IsVisible" Value="False"/>
                    </DataTrigger>
                </ListView.Triggers>
                <ListView.Header>
                    <StackLayout>
                        <Label Text="Account"
                                   TextColor="#305d82"
                                   FontSize="Large"/>
                        <Label Text="{Binding Report.AccountNumber}"
                                   FontSize="Large"/>
                        <Label Text="Call Report"
                                   TextColor="#305d82"
                                   FontSize="Large"/>
                        <Label Text="{Binding Report.CallReportId}"
                                   FontSize="Large"/>
                        <Label Text="Call Report Type"
                                   TextColor="#305d82"
                                   FontSize="Large"/>
                        <Label Text="{Binding ReportType}"
                                    FontSize="Large"/>
                        <Label Text="Call Date"
                                       TextColor="#305d82"
                                       FontSize="Large"/>
                        <DatePicker Date="{Binding Report.CallDate}" 
                                            IsEnabled="False" 
                                            FontSize="Large"></DatePicker>
                        <Label Text="Reference"
                                       TextColor="#305d82"
                                       FontSize="Large"/>
                        <Label Text="{Binding Report.Reference, TargetNullValue='Reference Not Given'}"
                                       FontSize="Large"/>
                    </StackLayout>
                </ListView.Header>
                <ListView.Footer>
                    <StackLayout Padding="0,15,0,10"
                                 Orientation="Horizontal">
                        <Button Grid.Column="0" 
                                Text="Save"
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="#428bca" 
                                TextColor="White" 
                                Command="{Binding SaveCallReportCommand}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="True">
                                    <Setter Property="IsVisible" Value="True"></Setter>
                                </DataTrigger>
                                <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="False">
                                    <Setter Property="IsVisible" Value="False"></Setter>
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                        <Button Grid.Column="1" 
                                Text="Delete"
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="#f44242" 
                                TextColor="White" 
                                Command="{Binding DeleteCallReportCommand}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="True">
                                    <Setter Property="IsVisible" Value="True"></Setter>
                                </DataTrigger>
                                <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="False">
                                    <Setter Property="IsVisible" Value="False"></Setter>
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackLayout>
                </ListView.Footer>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding QuestionHeader}"
                                           FontSize="Large"
                                           TextColor="#305d82"/>
                                <Editor Text="{Binding Response}"
                                                AutoSize="TextChanges"
                                                FontSize="Large"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>