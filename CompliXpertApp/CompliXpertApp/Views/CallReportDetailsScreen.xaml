            <!--this will display if not created on the mobile device-->
        <StackLayout Margin="15"
                         VerticalOptions="FillAndExpand">
            <StackLayout.Triggers>
                <DataTrigger TargetType="StackLayout"
                                     Binding="{Binding CreatedOnMobile}"
                                     Value="True">
                    <Setter Property="IsVisible" Value="False"></Setter>
                </DataTrigger>
                <DataTrigger TargetType="StackLayout"
                                     Binding="{Binding CreatedOnMobile}"
                                     Value="False">
                    <Setter Property="IsVisible" Value="True"></Setter>
                </DataTrigger>
            </StackLayout.Triggers>
            <ListView ItemsSource="{Binding QuestionandResponses}" 
                          VerticalOptions="StartAndExpand"
                              HasUnevenRows="True" 
                              SeparatorVisibility="None"
                              SelectionMode="None"
                              VerticalScrollBarVisibility="Never"
                              HorizontalScrollBarVisibility="Default"
                              ItemTapped="ShowResponse">
                <ListView.Header>
                    <StackLayout>
                        <Label Text="Account"
                                   TextColor="#305d82"
                                   FontSize="Large"/>
                        <Label Text="{Binding Report.AccountNumber}"
                                   FontSize="Large"/>
                        <Label Text="Call Report"
                                   TextColor="#305d82"
                                   FontSize="Large"/>
                        <Label Text="{Binding Report.CallReportId}"
                                   FontSize="Large"/>
                        <Label Text="Call Report Type"
                                   TextColor="#305d82"
                                   FontSize="Large"/>
                        <Label Text="{Binding ReportType}"
                                    FontSize="Large"/>
                        <Label Text="Call Date"
                                       TextColor="#305d82"
                                       FontSize="Large"/>
                        <DatePicker Date="{Binding Report.CallDate}" 
                                            IsEnabled="False" 
                                            FontSize="Large"></DatePicker>
                        <Label Text="Reference"
                                       TextColor="#305d82"
                                       FontSize="Large"/>
                        <Label Text="{Binding Report.Reference, TargetNullValue='Reference Not Given'}"
                                       FontSize="Large"/>
                    </StackLayout>
                </ListView.Header>
                <ListView.Footer>
                    <StackLayout Padding="0,15,0,10">
                        <Button 
                                Text="Close" 
                                BackgroundColor="#428bca" 
                                TextColor="White" 
                                Command="{Binding CloseCallReportCommand}">
                            <Button.Triggers>
                                <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="True">
                                    <Setter Property="IsVisible" Value="False"></Setter>
                                </DataTrigger>
                                <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="False">
                                    <Setter Property="IsVisible" Value="True"></Setter>
                                </DataTrigger>
                            </Button.Triggers>
                        </Button>
                    </StackLayout>
                </ListView.Footer>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding QuestionHeader}"
                                           FontSize="Large"
                                           TextColor="#305d82"/>
                                <Label Text="{Binding Response}"
                                               FontSize="Large"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
