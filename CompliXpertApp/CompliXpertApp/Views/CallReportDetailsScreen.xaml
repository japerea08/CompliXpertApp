<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CompliXpertApp.Views.CallReportDetailsScreen"
             Title="CompliXpert">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="15">
                <Label Text="Call Report Details"
                   HorizontalTextAlignment="Center"    
                   FontSize="Large"
                   Margin="0,0,0,10"/>
                <Label Text="Call Report"
                   TextColor="#305d82"
                   FontSize="Large"/>
                <Label Text="{Binding Report.CallReportId}"
                       FontSize="Medium"/>
                <Label Text="Account"
                   TextColor="#305d82"
                   FontSize="Large"/>
                <Label Text="{Binding Report.AccountNumber}"
                       FontSize="Medium"/>
                <Label Text="Call Reason"
                   TextColor="#305d82"
                   FontSize="Large"/>
                <Label Text="{Binding Report.Reason}"
                       FontSize="Medium"/>
                <StackLayout>
                    <StackLayout.Triggers>
                        <DataTrigger TargetType="StackLayout"
                                     Binding="{Binding CreatedOnMobile}"
                                     Value="True">
                            <Setter Property="IsVisible" Value="True"></Setter>
                        </DataTrigger>
                        <DataTrigger TargetType="StackLayout"
                                     Binding="{Binding CreatedOnMobile}"
                                     Value="False">
                            <Setter Property="IsVisible" Value="False"></Setter>
                        </DataTrigger>
                    </StackLayout.Triggers>
                    <Label Text="Call Date"
                        TextColor="#305d82"
                        FontSize="Large"/>
                    <DatePicker Date="{Binding Report.CallDate}" FontSize="Medium"></DatePicker>
                    <Label Text="Reference"
                        TextColor="#305d82"
                        FontSize="Large"/>
                    <Entry Text="{Binding Report.Reference}"
                           FontSize="Medium"/>
                    <StackLayout IsVisible="{Binding CustomerVisitSelected}">
                        <Label Text="Purpose of Visit or Phone Call"
                        TextColor="#305d82"
                        FontSize="Large"/>
                        <Entry Text="{Binding Report.Purpose}"
                               FontSize="Medium"/>
                        <Label Text="Officer's Observations or Comments"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Entry Text="{Binding Report.OfficerComments}"
                               FontSize="Medium"/>
                        <Label Text="Other Comments"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Entry Text="{Binding Report.OtherComments}"
                               FontSize="Medium"/>
                        <Label Text="Customer Comments"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Entry Text="{Binding Report.CustomerComments}"
                               FontSize="Medium"/>
                    </StackLayout>
                    <StackLayout IsVisible="{Binding FatcaSelected}">
                        <Label Text="Nationality"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Entry Text="{Binding Report.Nationality}"
                               FontSize="Medium"/>
                        <Label Text="Reason for Alert"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Entry Text="{Binding Report.ReasonforAlert}"
                               FontSize="Medium"/>
                        <Label Text="Customer Response"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Entry Text="{Binding Report.CustomerResponse}"
                               FontSize="Medium"/>
                    </StackLayout>
                </StackLayout>
                <StackLayout>
                    <StackLayout.Triggers>
                        <DataTrigger TargetType="StackLayout"
                                     Binding="{Binding CreatedOnMobile}"
                                     Value="True">
                            <Setter Property="IsVisible" Value="False"></Setter>
                        </DataTrigger>
                        <DataTrigger TargetType="StackLayout"
                                     Binding="{Binding CreatedOnMobile}"
                                     Value="False">
                            <Setter Property="IsVisible" Value="True"></Setter>
                        </DataTrigger>
                    </StackLayout.Triggers>
                    <Label Text="Call Date"
                        TextColor="#305d82"
                        FontSize="Large"/>
                    <DatePicker Date="{Binding Report.CallDate}" IsEnabled="False" FontSize="Medium"></DatePicker>
                    <Label Text="Reference"
                        TextColor="#305d82"
                        FontSize="Large"/>
                    <Label Text="{Binding Report.Reference}"
                           FontSize="Medium"/>
                    <StackLayout IsVisible="{Binding CustomerVisitSelected}">
                        <Label Text="Purpose of Visit or Phone Call"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Label Text="{Binding Report.Purpose}"
                               FontSize="Medium"/>
                        <Label Text="Officer's Observations or Comments"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Label Text="{Binding Report.OfficerComments}"
                               FontSize="Medium"/>
                        <Label Text="Other Comments"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Label Text="{Binding Report.OtherComments}"
                               FontSize="Medium"/>
                        <Label Text="Customer Comments"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Label Text="{Binding Report.CustomerComments}"
                               FontSize="Medium"/>
                    </StackLayout>
                    <StackLayout IsVisible="{Binding FatcaSelected}">
                        <Label Text="Nationality"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Label Text="{Binding Report.Nationality}"
                               FontSize="Medium"/>
                        <Label Text="Reason for Alert"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Label Text="{Binding Report.ReasonforAlert}"
                               FontSize="Medium"/>
                        <Label Text="Customer Response"
                            TextColor="#305d82"
                            FontSize="Large"/>
                        <Label Text="{Binding Report.CustomerResponse}"
                               FontSize="Medium"/>
                    </StackLayout>
                </StackLayout>
                <Grid Padding="0,0,0,10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" Text="Save" BackgroundColor="#428bca" TextColor="White" Command="{Binding SaveCallReportCommand}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="True">
                                <Setter Property="IsVisible" Value="True"></Setter>
                            </DataTrigger>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="False">
                                <Setter Property="IsVisible" Value="False"></Setter>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Grid.Column="1" Text="Delete" BackgroundColor="#f44242" TextColor="White" Command="{Binding DeleteCallReportCommand}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="True">
                                <Setter Property="IsVisible" Value="True"></Setter>
                            </DataTrigger>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="False">
                                <Setter Property="IsVisible" Value="False"></Setter>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                    <Button Grid.Column="0" Text="Close" BackgroundColor="#428bca" TextColor="White" Command="{Binding CloseCallReportCommand}">
                        <Button.Triggers>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="True">
                                <Setter Property="IsVisible" Value="False"></Setter>
                            </DataTrigger>
                            <DataTrigger TargetType="Button"
                                         Binding="{Binding CreatedOnMobile}"
                                         Value="False">
                                <Setter Property="IsVisible" Value="True"></Setter>
                            </DataTrigger>
                        </Button.Triggers>
                    </Button>
                </Grid>
                <ActivityIndicator IsRunning="{Binding IsBusy}"/>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>