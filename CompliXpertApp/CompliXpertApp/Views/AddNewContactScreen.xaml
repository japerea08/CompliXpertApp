<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local2="clr-namespace:CompliXpertApp.Behaviors"
             x:Class="CompliXpertApp.Views.AddNewContactScreen">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="15,0"
                         Padding="0,5">
                <Label Text="Add Contact"
                      FontAttributes="Bold"
                       FontSize="Large"
                       Margin="0,5"/>
                <Label  Text="Contact Name"
                        FontSize="Medium"
                       TextColor="#305d82"/>
                <Entry Text="{Binding ContactName}"
                       FontSize="Medium"/>
                <Label Text="Title"
                       FontSize="Medium"
                       TextColor="#305d82"/>
                <Entry Text="{Binding NewContact.Title}"
                       FontSize="Medium"/>
                <Label Text="Email"
                       FontSize="Medium"
                       TextColor="#305d82"/>
                <Entry Text="{Binding NewContactEmail}"
                       FontSize="Medium"
                       Keyboard="Email">
                    <Entry.Behaviors>
                        <local2:EmailValidatorBehavior Command="{Binding EmailValidateMessageCommand}"/>
                    </Entry.Behaviors>
                </Entry>
                <Label Text="{Binding EmailValidationMessage}"
                       TextColor="{Binding EmailValidationColor}">
                    <Label.Triggers>
                        <DataTrigger TargetType="Label"
                                     Binding="{Binding TextEntered}"
                                     Value="false">
                            <Setter Property="IsVisible"
                                    Value="false"/>
                        </DataTrigger>
                        <DataTrigger TargetType="Label"
                                     Binding="{Binding TextEntered}"
                                     Value="true">
                            <Setter Property="IsVisible"
                                    Value="true"/>
                        </DataTrigger>
                    </Label.Triggers>
                </Label>
                <Label Text="Phone Number"
                       FontSize="Medium"/>
                <Entry Text="{Binding NewContact.Phonenumber}"
                       FontSize="Medium"
                       Keyboard="Telephone"/>
                <Label Text="Company"
                       FontSize="Medium"/>
                <Entry Text="{Binding NewContact.Company}"
                       FontSize="Medium"/>
                <Label Text="Comments"
                        FontSize="Medium"
                        TextColor="#305d82"/>
                <Editor Text="{Binding NewContact.Comments}"
                                     AutoSize="TextChanges"
                                     FontSize="Medium"/>
                <Button Text="Add New Contact" 
                        BackgroundColor="#428bca" 
                        TextColor="White"
                        Margin="0,0,0,20"
                        Command="{Binding AddNewContactCommand}"></Button>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>