<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CompliXpertApp.Views.CustomerMaster"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="CustomerMast">

    <ContentPage.Content>
        <StackLayout>
            <Label
                Margin="0,0,0,20"
                FontAttributes="Bold"
                FontSize="Large"
                HorizontalTextAlignment="Center"
                Text="Customer" />
            <ListView
                x:Name="ListView"
                HasUnevenRows="True"
                ItemsSource="{Binding IndexedAccount}"
                SeparatorColor="#ffffff">
                <ListView.Header>
                    <Grid Margin="15,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="0,0,0,20"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            HorizontalTextAlignment="Start"
                            Text="Customer Name:" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="0,0,0,20"
                            FontSize="Medium"
                            HorizontalTextAlignment="Start"
                            Text="{Binding Customer.CustomerName}" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,0,0,20"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            HorizontalTextAlignment="Start"
                            Text="Customer Number:" />
                        <Label
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="0,0,0,15"
                            FontSize="Medium"
                            HorizontalTextAlignment="Start"
                            Text="{Binding Customer.CustomerNumber}" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="0,0,0,20"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            HorizontalTextAlignment="Start"
                            Text="Customer Id:" />
                        <Label
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="0,0,0,20"
                            FontSize="Medium"
                            HorizontalTextAlignment="Start"
                            Text="{Binding Customer.CustomerId}" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="0"
                            Margin="0,0,0,20"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            HorizontalTextAlignment="Start"
                            Text="Legal Type:" />
                        <Label
                            Grid.Row="3"
                            Grid.Column="1"
                            Margin="0,0,0,20"
                            FontSize="Medium"
                            HorizontalTextAlignment="Start"
                            Text="{Binding Customer.LegalType}" />
                        <Label
                            Grid.Row="4"
                            Grid.ColumnSpan="2"
                            FontAttributes="Bold"
                            FontSize="Medium"
                            HorizontalTextAlignment="Center"
                            Text="Accounts" />
                    </Grid>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Grid BackgroundColor="#eff4f9" ColumnSpacing="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="40" />
                                        <RowDefinition Height="40" />
                                    </Grid.RowDefinitions>
                                    <BoxView
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Grid.ColumnSpan="2"
                                        IsVisible="False"
                                        Color="LightGray">
                                        <BoxView.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsVisible}"
                                                TargetType="BoxView"
                                                Value="False">
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                        </BoxView.Triggers>
                                    </BoxView>
                                    <Label
                                        Grid.Row="0"
                                        Grid.Column="0"
                                        Margin="15,0,0,0"
                                        FontSize="Medium"
                                        IsVisible="{Binding IsVisible}"
                                        Text="{Binding Object.AccountClass.Description}"
                                        TextColor="{StaticResource DarkBlueLabelColor}"
                                        VerticalTextAlignment="Center" />
                                    <Label
                                        Grid.Row="1"
                                        Grid.Column="0"
                                        Margin="15,0,0,10"
                                        FontSize="Small"
                                        IsVisible="{Binding IsVisible}"
                                        Text="{Binding Object.AccountNumber}" />
                                    <ImageButton
                                        Grid.RowSpan="2"
                                        Grid.Column="2"
                                        Margin="15,0"
                                        BackgroundColor="#eff4f9"
                                        BorderColor="LightGray"
                                        Command="{Binding Path=BindingContext.ExpandMenuCommand, Source={x:Reference CustomerMast}}"
                                        CommandParameter="{Binding .}"
                                        HorizontalOptions="CenterAndExpand"
                                        IsVisible="{Binding IsVisible}"
                                        Opacity="0.5"
                                        Source="three_dot.png"
                                        TabIndex="{Binding Index}"/>
                                    <!--  Image for when tapped  -->
                                    <ImageButton
                                        Grid.RowSpan="2"
                                        Grid.Column="0"
                                        Margin="15,0"
                                        BackgroundColor="#eff4f9"
                                        Command="{Binding Path=BindingContext.ExpandMenuCommand, Source=                              {x:Reference CustomerMast}}"
                                        CommandParameter="{Binding .}"
                                        HorizontalOptions="FillAndExpand"
                                        IsVisible="False"
                                        Opacity="0.5"
                                        Source="three_dot.png">
                                        <ImageButton.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsVisible}"
                                                TargetType="ImageButton"
                                                Value="false">
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                        </ImageButton.Triggers>
                                    </ImageButton>
                                    <Frame
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="1"
                                        Margin="0"
                                        BackgroundColor="#f5f5f5"
                                        BorderColor="LightGray"
                                        IsVisible="False">
                                        <Frame.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsVisible}"
                                                TargetType="Frame"
                                                Value="False">
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                        </Frame.Triggers>
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Path=BindingContext.CallCreateCallReportCommand, Source={x:Reference CustomerMast}}" CommandParameter="{Binding .}" />
                                        </Frame.GestureRecognizers>
                                        <StackLayout>
                                            <Image HorizontalOptions="Center" Source="create_icon.png" />
                                            <Label
                                                FontSize="Small"
                                                HorizontalTextAlignment="Start"
                                                Text="Create Call Report" />
                                        </StackLayout>
                                    </Frame>
                                    <Frame
                                        Grid.Row="0"
                                        Grid.RowSpan="2"
                                        Grid.Column="2"
                                        Margin="0"
                                        BackgroundColor="#f5f5f5"
                                        BorderColor="LightGray"
                                        IsVisible="False">
                                        <Frame.Triggers>
                                            <DataTrigger
                                                Binding="{Binding IsVisible}"
                                                TargetType="Frame"
                                                Value="False">
                                                <Setter Property="IsVisible" Value="True" />
                                            </DataTrigger>
                                        </Frame.Triggers>
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Path=BindingContext.CallViewCallReportsCommand, Source={x:Reference CustomerMast}}" CommandParameter="{Binding .}" />
                                        </Frame.GestureRecognizers>
                                        <StackLayout>
                                            <Image
                                                HorizontalOptions="Center"
                                                Source="view_icon.png"
                                                VerticalOptions="End" />
                                            <Label
                                                FontSize="Small"
                                                Text="View Call Report"
                                                VerticalTextAlignment="End" />
                                        </StackLayout>

                                    </Frame>
                                </Grid>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>